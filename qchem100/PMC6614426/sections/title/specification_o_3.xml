      <div class="mrow">
       <div close=")" open="(" separators="" class="mfenced">
        <div class="mrow">
         <div class="msup">
          <div class="mrow">
           <span class="mi">e</span>
          </div>
          <div class="mrow">
           <div class="mrow">
            <span class="mo">(</span>
            <div class="mrow">
             <span class="mi">A</span>
             <span class="mo">∕</span>
             <span class="mi">n</span>
            </div>
            <span class="mo">)</span>
           </div>
          </div>
         </div>
         <div class="msup">
          <div class="mrow">
           <span class="mi">e</span>
          </div>
          <div class="mrow">
           <div class="mrow">
            <span class="mo">(</span>
            <div class="mrow">
             <span class="mi">B</span>
             <span class="mo">∕</span>
             <span class="mi">n</span>
            </div>
            <span class="mo">)</span>
           </div>
          </div>
         </div>
        </div>
       </div>
      </div>
      <div class="mrow">
