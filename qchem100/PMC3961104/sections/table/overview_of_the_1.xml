    <tr>
     <td rowspan="1" colspan="1">
      <span class="monospace">write_pdb</span>
     </td>
     <td style="text-align:left;white-space:normal;" rowspan="1" colspan="1">Write the peptide structure to a PDB file</td>
    </tr>
