  </div>; where 
  <span class="italic">c</span>, 
  <div class="inline-formula">
   <div id="M13" altimg="si10.svg" class="math">
    <div class="msub">
     <div class="mrow">
      <span class="mi">ϵ</span>
     </div>
     <div class="mrow">
      <span class="mn">0</span>
     </div>
